<div class="container">
<h2>Edit tag</h2>

<%= form_for @tag, :url =>{:action => "update", :id =>@tag} do |f| %>
<div class="input-group mb-3">
<span class="input-group-text">Name</span>
<%= f.text_field 'name', class: "form-control" %>
</div>
<div class="input-group mb-3">
<span class="input-group-text">Tag type</span>
<%= f.text_field 'tag_type_id', class: "form-control" %>
</div>
<div class="btn-group">
<%= f.submit "Save", class: "btn btn-success" %>
<%= link_to 'Back', {:action => 'list'}, class: "btn btn-secondary" %>
</div>
<% end %>


</div>
